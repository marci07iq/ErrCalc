{
	"compilerOptions": {
		"allowJs": true,
		"module": "amd",
		"target": "es2020",
		"jsx": "preserve",
		"strictFunctionTypes": true,
		"sourceMap": true,
		"outFile": "./build/build.js",
		"strictNullChecks": true,
		"moduleResolution": "node"
	},
	"include": [
		"new"
	],
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	]
}